				"linkedServiceName": {
					"referenceName": "linked_service_for_sql",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"tables": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "SqlServerTable",
				"schema": [],
